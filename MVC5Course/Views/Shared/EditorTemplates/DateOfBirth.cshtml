@model Nullable<System.DateTime>

@if (Model.HasValue)
{
    @Html.TextBox("", Model.Value.ToString("yyyy-MM-dd"), new { @class = "form-control text-box single-line" })
}
else
{
    @Html.TextBox("", null, new { @class = "form-control text-box single-line" })
}

<script>
    $(function () {
        $("#@Html.Id("")").datepicker({
            dateFormat: "yy-mm-dd"
        });
    })
</script>
